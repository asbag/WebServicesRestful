//GET and DELETE Ajax
function ajax_data(type, url, success)
{
	$.ajax({
	type:type,
	url:url,
	dataType:"json",
	restful:true,
	cache:false,
	timeout:20000,
	async:true,
	beforeSend :function(data) { },
	success:function(data){
	success.call(this, data);
	},
	error:function(data){
	alert("Error In Connecting");
	}
	});
}